<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_input_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#E0E0E0"
        android:gravity="end"
        android:padding="16dp"
        android:text="0.0"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_label" />

    <Button
        android:id="@+id/button_7"
        style="@style/CalculatorButton"
        android:text="7"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/text_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_8"/>

    <Button
        android:id="@+id/button_8"
        style="@style/CalculatorButton"
        android:text="8"
        app:layout_constraintTop_toTopOf="@id/button_7"
        app:layout_constraintStart_toEndOf="@id/button_7"
        app:layout_constraintEnd_toStartOf="@id/button_9"/>

    <Button
        android:id="@+id/button_9"
        style="@style/CalculatorButton"
        android:text="9"
        app:layout_constraintTop_toTopOf="@id/button_7"
        app:layout_constraintStart_toEndOf="@id/button_8"
        app:layout_constraintEnd_toStartOf="@id/button_add"/>

    <Button
        android:id="@+id/button_add"
        style="@style/CalculatorButton"
        android:text="+"
        app:layout_constraintTop_toTopOf="@id/button_7"
        app:layout_constraintStart_toEndOf="@id/button_9"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_4"
        style="@style/CalculatorButton"
        android:text="4"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/button_7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_5"/>

    <Button
        android:id="@+id/button_5"
        style="@style/CalculatorButton"
        android:text="5"
        app:layout_constraintTop_toTopOf="@id/button_4"
        app:layout_constraintStart_toEndOf="@id/button_4"
        app:layout_constraintEnd_toStartOf="@id/button_6"/>

    <Button
        android:id="@+id/button_6"
        style="@style/CalculatorButton"
        android:text="6"
        app:layout_constraintTop_toTopOf="@id/button_4"
        app:layout_constraintStart_toEndOf="@id/button_5"
        app:layout_constraintEnd_toStartOf="@id/button_multiply"/>

    <Button
        android:id="@+id/button_multiply"
        style="@style/CalculatorButton"
        android:text="K"
        app:layout_constraintTop_toTopOf="@id/button_4"
        app:layout_constraintStart_toEndOf="@id/button_6"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_1"
        style="@style/CalculatorButton"
        android:text="1"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/button_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_2"/>

    <Button
        android:id="@+id/button_2"
        style="@style/CalculatorButton"
        android:text="2"
        app:layout_constraintTop_toTopOf="@id/button_1"
        app:layout_constraintStart_toEndOf="@id/button_1"
        app:layout_constraintEnd_toStartOf="@id/button_3"/>

    <Button
        android:id="@+id/button_3"
        style="@style/CalculatorButton"
        android:text="3"
        app:layout_constraintTop_toTopOf="@id/button_1"
        app:layout_constraintStart_toEndOf="@id/button_2"
        app:layout_constraintEnd_toStartOf="@id/button_add_2"/>

    <Button
        android:id="@+id/button_add_2"
        style="@style/CalculatorButton"
        android:text="+"
        app:layout_constraintTop_toTopOf="@id/button_1"
        app:layout_constraintStart_toEndOf="@id/button_3"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_dot"
        style="@style/CalculatorButton"
        android:text="."
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/button_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_0"/>

    <Button
        android:id="@+id/button_0"
        style="@style/CalculatorButton"
        android:text="0"
        app:layout_constraintTop_toTopOf="@id/button_dot"
        app:layout_constraintStart_toEndOf="@id/button_dot"
        app:layout_constraintEnd_toStartOf="@id/button_equals"/>

    <Button
        android:id="@+id/button_equals"
        style="@style/CalculatorButton"
        android:text="="
        app:layout_constraintTop_toTopOf="@id/button_dot"
        app:layout_constraintStart_toEndOf="@id/button_0"
        app:layout_constraintEnd_toStartOf="@id/button_subtract"/>

    <Button
        android:id="@+id/button_subtract"
        style="@style/CalculatorButton"
        android:text="-"
        app:layout_constraintTop_toTopOf="@id/button_dot"
        app:layout_constraintStart_toEndOf="@id/button_equals"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>